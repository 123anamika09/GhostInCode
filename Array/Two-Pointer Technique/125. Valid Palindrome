class Solution {
    public boolean isPalindrome(String s) {
        s = s.toLowerCase();
        s = s.replaceAll("[^a-zA-Z0-9]",""); // replace everything except a-z , A_Z and 0-9
        char[] ch = s.toCharArray();
        int i = 0;
        int j = ch.length-1;
        int n = ch.length;
        while(i<j){
            if(ch[i] != ch[j]) return false;
            i++;
            j--;
        } 
        return true;
    }
}
